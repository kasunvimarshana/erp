{
  "name": "iam",
  "display_name": "Identity & Access Management",
  "description": "Comprehensive authentication and authorization system with RBAC, ABAC, MFA, and SSO support",
  "version": "1.0.0",
  "author": "ERP Team",
  "dependencies": ["base"],
  "requires": {
    "php": ">=8.2",
    "laravel": ">=10.0"
  },
  "providers": [
    "Modules\\IAM\\Providers\\IAMServiceProvider"
  ],
  "aliases": {
    "IAM": "Modules\\IAM\\Facades\\IAM"
  },
  "autoload": {
    "psr-4": {
      "Modules\\IAM\\": "src/"
    }
  },
  "extra": {
    "module-type": "core",
    "priority": 2,
    "routes": {
      "api": "routes/api.php"
    },
    "migrations": "database/migrations",
    "permissions": [
      {
        "name": "iam.users.view",
        "description": "View users",
        "group": "Users"
      },
      {
        "name": "iam.users.create",
        "description": "Create users",
        "group": "Users"
      },
      {
        "name": "iam.users.edit",
        "description": "Edit users",
        "group": "Users"
      },
      {
        "name": "iam.users.delete",
        "description": "Delete users",
        "group": "Users"
      },
      {
        "name": "iam.roles.view",
        "description": "View roles",
        "group": "Roles"
      },
      {
        "name": "iam.roles.create",
        "description": "Create roles",
        "group": "Roles"
      },
      {
        "name": "iam.roles.edit",
        "description": "Edit roles",
        "group": "Roles"
      },
      {
        "name": "iam.roles.delete",
        "description": "Delete roles",
        "group": "Roles"
      }
    ],
    "enabled": true
  }
}
